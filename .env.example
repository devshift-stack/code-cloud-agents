# ===========================================
# Code Cloud Agents - Environment Variables
# ===========================================
# Copy to .env and fill in your values

# ----- Server -----
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
PROJECT_ROOT=/path/to/project

# ----- Database -----
SQLITE_PATH=./data/app.sqlite

# ----- Authentication -----
JWT_SECRET=your-jwt-secret-min-32-chars-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars-change-in-production

# ----- Admin Seed (auto-creates admin on first startup) -----
SEED_ADMIN_EMAIL=admin@cloudagents.io
SEED_ADMIN_PASSWORD=ChangeMe123!
SEED_ADMIN_NAME=Admin

# ----- Queue (Redis) -----
REDIS_URL=redis://localhost:6379
QUEUE_ENABLED=false

# ----- AI Providers -----
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GEMINI_API_KEY=

# ----- Email (SMTP) -----
EMAIL_FROM=noreply@cloudagents.io
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# ----- Error Monitoring (Sentry) -----
SENTRY_DSN=
SENTRY_RELEASE=
VITE_SENTRY_DSN=

# ----- Integrations -----

# GitHub
GITHUB_ENABLED=false
GITHUB_TOKEN=
GITHUB_ORG=
GITHUB_WEBHOOK_SECRET=

# Slack
SLACK_ENABLED=false
SLACK_TOKEN=
SLACK_WEBHOOK_URL=
SLACK_SIGNING_SECRET=
SLACK_NOTIFICATIONS_ENABLED=false
SLACK_ALERT_CHANNEL=
SLACK_BOT_USER_ID=
SLACK_ARNEL_USER_ID=

# Linear
LINEAR_ENABLED=false
LINEAR_API_KEY=
LINEAR_WEBHOOK_SECRET=

# WhatsApp
WHATSAPP_ENABLED=false
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=

# Voice
VOICE_ENABLED=false
VOICE_PROVIDER=
VOICE_API_KEY=

# Google
GOOGLE_ENABLED=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# iCloud
ICLOUD_ENABLED=false
ICLOUD_APPLE_ID=
ICLOUD_APP_PASSWORD=

# Pinecone (Vector DB)
PINECONE_ENABLED=false
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX=

# ----- Supervisor -----
STOP_SCORE_THRESHOLD=40
MAX_PARALLEL_AGENTS=4

# ----- Webhooks -----
WEBHOOK_SECRET=your-webhook-secret

# ----- Cron Jobs -----
CRON_API_KEY=dev-cron-key-change-in-production

# ----- Fun -----
MUJO_HUMOR_ENABLED=false
MUJO_LANGUAGE=de
